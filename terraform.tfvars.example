# AWS Configuration
region = "us-west-2"

# Project Metadata
project_name = "eks-infrastructure"
environment  = "dev"  # Options: dev, staging, prod
owner        = "DevOps Team"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-west-2a", "us-west-2b", "us-west-2c"]
private_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnet_cidrs  = ["10.0.4.0/24", "10.0.5.0/24", "10.0.6.0/24"]

# VPC Features
enable_nat_gateway = true
single_nat_gateway = false  # Set to true for cost savings in dev/staging (not recommended for production)
enable_flow_logs   = true

# EKS Cluster Configuration
cluster_name    = "my-eks-cluster"
cluster_version = "1.30"

# EKS Security
enable_cluster_encryption      = true
cluster_endpoint_public_access = true  # Set to false for private-only access

# EKS Node Groups
node_groups = {
  general = {
    instance_types = ["t3.medium"]
    capacity_type  = "ON_DEMAND"  # Options: ON_DEMAND, SPOT
    scaling_config = {
      desired_size = 2
      max_size     = 4
      min_size     = 1
    }
  }
  # Example: Add a spot instance node group for cost optimization
  # spot = {
  #   instance_types = ["t3.medium", "t3a.medium"]
  #   capacity_type  = "SPOT"
  #   scaling_config = {
  #     desired_size = 1
  #     max_size     = 3
  #     min_size     = 0
  #   }
  # }
}
